<div class=" bios-wrapper">
  <div class="bios">
    <h2> TEAM </h2><br><br>
    <div class="row">
      {{#each model as |person|}}
        <div class="col-md-3">
          <div class="panel">
            <img src="{{person.image}}">
            <h5>{{person.name}}</h5>
            <p>{{person.title}}</p>
            <div class="actions">
              <a href="mailto:{{person.email}}">{{fa-icon "envelope"}}contact</a>
              <a href="#" data-toggle="modal" data-target="#{{person.identifier}}">
                {{fa-icon "user"}}bio
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{#each model as |person|}}
   <div class="modal fade" id="{{person.identifier}}">
      {{#b-modal}}
        <img src="{{person.image}}">
        <h3>{{person.name}}</h3>
        <p>{{person.title}}</p>
        <p>{{person.bio}}</p>
        <p>{{person.email}}</p>
        <p>{{person.phone}}</p>
      {{/b-modal}}
   </div>
{{/each}}







